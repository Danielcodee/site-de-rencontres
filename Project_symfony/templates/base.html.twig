                  <div class="d-flex" style="height: 200px;">
                    <div class="vr"></div>
                  </div>
                  <nav class="nav flex-column  offset-1">
                <a class="nav-link active" aria-current="page" href="{{ path('app_landing') }}">À propos</a>
